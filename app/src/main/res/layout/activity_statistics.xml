<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chdm.ogo_test.activities.StatisticsActivity">

    <Button
        android:onClick="buttonGetLocalStat"
        android:layout_margin="20dp"
        android:id="@+id/button_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Своя статистика"
        android:gravity="center"
        style="@style/our_buttons"
        android:theme="@style/our_buttons"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/space"
        android:layout_alignEnd="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/button_local"
        android:id="@+id/listView"/>

    <Button
        android:onClick="buttonGetGlobalStat"
        android:layout_margin="20dp"
        android:id="@+id/button_global"
        style="@style/our_buttons"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Глобальная статистика"
        android:layout_below="@+id/space"
        android:layout_alignLeft="@+id/space"
        android:layout_alignStart="@+id/space"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listView"
        android:layout_centerHorizontal="true"
        android:id="@+id/space"/>

</RelativeLayout>