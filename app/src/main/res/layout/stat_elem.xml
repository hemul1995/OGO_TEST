<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="10"
        android:layout_centerVertical="true"
        style="@style/our_text"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/textView_MAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00:00:00:00"
        android:layout_alignBaseline="@+id/textView_index"
        android:layout_alignBottom="@+id/textView_index"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        style="@style/our_text"/>

    <TextView
        android:id="@+id/textView_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99.00000"
        android:layout_alignBaseline="@+id/textView_MAC"
        android:layout_alignBottom="@+id/textView_MAC"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        style="@style/our_text"/>

</RelativeLayout>