<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chdm.ogo_test">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_gorbov"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.StatisticsActivity" android:label="@string/global_stat" android:screenOrientation="portrait"/>
        <activity android:name=".activities.TestActivity" android:label="Тест" android:screenOrientation="portrait"/>
        <activity android:name=".activities.ResultActivity"  android:label="Результат" android:screenOrientation="portrait"/>
        <activity android:name=".activities.HelpActivity" android:label="Справка" android:screenOrientation="portrait"/>
    </application>

</manifest>